# AWS Configuration
region = "us-east-1"
prefix = "genai-udop-idp"

# Administrator Configuration
admin_email = "admin@example.com"

# Logging Configuration
log_level          = "INFO"
log_retention_days = 7

# Data Retention
data_tracking_retention_days = 365

# Configuration File Path (optional - uses default RVL-CDIP package config)
# config_file_path = "../../sources/config_library/pattern-3/rvl-cdip-package-sample/config.yaml"

# SageMaker Model Training Configuration
training_config = {
  max_epochs    = 3                      # Number of training epochs
  base_model    = "microsoft/udop-large" # Base UDOP model to fine-tune
  retrain_model = false                  # Set to true to retrain on each apply
}

# SageMaker Configuration
sagemaker_endpoint_name = "udop-endpoint"

# Feature Toggles
summarization_enabled = true
enable_evaluation     = false
enable_reporting      = false

# Discovery Configuration
discovery = {
  enabled = false
}

# Chat with Document Configuration
chat_with_document = {
  enabled = false
  # Optional: Add Bedrock Guardrail for content filtering
  # guardrail_id_and_version = "your-guardrail-id:1"
}

# Model Configuration
summarization_model_id = "us.amazon.nova-pro-v1:0"
evaluation_model_id    = "anthropic.claude-3-sonnet-20240229-v1:0"

# API Configuration
enable_api = true

# Web UI Configuration
web_ui = {
  enabled = true
}

# Tags
tags = {
  Environment = "dev"
  Project     = "genai-idp-accelerator"
}

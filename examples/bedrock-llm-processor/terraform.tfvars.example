# AWS Configuration
region = "us-east-1"
prefix = "genai-idp"

# Administrator Configuration
admin_email = "admin@example.com"

# Logging Configuration
log_level           = "INFO"
log_retention_days  = 7

# Data Retention
data_tracking_retention_days = 365

# Configuration File Path (optional - uses default lending package config)
# config_file_path = "../../sources/config_library/pattern-2/lending-package-sample/config.yaml"

# Model Configuration
classification_model_id = "us.amazon.nova-pro-v1:0"
extraction_model_id     = "us.amazon.nova-pro-v1:0"
summarization_model_id  = "us.anthropic.claude-3-7-sonnet-20250219-v1:0"
evaluation_model_id     = "anthropic.claude-3-sonnet-20240229-v1:0"

# Feature Toggles
summarization_enabled = true
enable_evaluation     = false
enable_reporting      = false

# API Configuration
api = {
  enabled = true
  agent_analytics = {
    enabled  = false
    model_id = "us.anthropic.claude-3-5-sonnet-20241022-v2:0"
  }
  discovery = {
    enabled = false
  }
  chat_with_document = {
    enabled = false
    # Optional: requires knowledge_base.enabled = true
    # guardrail_id_and_version = "your-guardrail-id:1"
  }
  knowledge_base = {
    enabled = false
    # Optional: enables Bedrock Knowledge Base retrieval in chat
    # knowledge_base_arn = "arn:aws:bedrock:us-east-1:123456789012:knowledge-base/XXXXXXXXXX"
  }
  process_changes = {
    enabled = false
  }
}

# Web UI Configuration
web_ui = {
  enabled = true
}

# Tags
tags = {
  Environment = "dev"
  Project     = "genai-idp-accelerator"
}

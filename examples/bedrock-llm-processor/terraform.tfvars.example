# AWS Configuration
region = "us-east-1"
prefix = "genai-idp"

# Administrator Configuration
admin_email = "admin@example.com"

# Logging Configuration
log_level           = "INFO"
log_retention_days  = 7

# Data Retention
data_tracking_retention_days = 365

# Configuration File Path (optional - uses default lending package config)
# config_file_path = "../../sources/config_library/pattern-2/lending-package-sample/config.yaml"

# Model Configuration
classification_model_id = "us.amazon.nova-pro-v1:0"
extraction_model_id     = "us.amazon.nova-pro-v1:0"
summarization_model_id  = "us.anthropic.claude-3-7-sonnet-20250219-v1:0"
evaluation_model_id     = "anthropic.claude-3-sonnet-20240229-v1:0"

# Feature Toggles
summarization_enabled = true
enable_evaluation     = false
enable_reporting      = false

# v0.4.8: Section splitting strategy for Pattern 2
# Options: "disabled" (default), "page", "llm_determined"
section_splitting_strategy = "disabled"

# v0.4.8: Agentic extraction (uses Strands agent framework)
enable_agentic_extraction = false

# v0.4.8: Review agent model (empty = use extraction_model_id)
review_agent_model = ""

# v0.4.8: API feature flags
enable_agent_companion_chat = true   # Multi-agent AI chat sessions
enable_test_studio          = true   # Automated dataset testing
enable_fcc_dataset          = false  # Deploy sample FCC dataset
enable_error_analyzer       = true   # AI-powered error diagnostics
enable_mcp                  = false  # MCP Integration (opt-in)

# Discovery Configuration
discovery = {
  enabled = false
}

# Chat with Document Configuration
chat_with_document = {
  enabled = false
  # Optional: Add Bedrock Guardrail for content filtering
  # guardrail_id_and_version = "your-guardrail-id:1"
}

# API Configuration
enable_api = true

# Web UI Configuration
web_ui = {
  enabled = true
}

# Tags
tags = {
  Environment = "dev"
  Project     = "genai-idp-accelerator"
}

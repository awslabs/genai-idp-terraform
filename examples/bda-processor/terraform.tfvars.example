# Example configuration for BDA Processor
# Copy this file to terraform.tfvars and update the values

# Basic configuration
region = "us-east-1"
prefix = "my-idp"

# Admin user (optional)
admin_email = "admin@example.com"

# API Configuration
api = {
  enabled = true

  # v0.4.8 feature flags
  enable_agent_companion_chat = false  # Multi-agent AI chat sessions
  enable_test_studio          = false  # Automated dataset testing
  enable_fcc_dataset          = false  # Deploy sample FCC dataset (requires enable_test_studio)
  enable_error_analyzer       = false  # AI-powered error diagnostics
  enable_mcp                  = false  # MCP Integration (Bedrock AgentCore Gateway, opt-in)

  agent_analytics = {
    enabled  = false
    model_id = "us.anthropic.claude-3-5-sonnet-20241022-v2:0"
  }

  discovery = {
    enabled = false
  }

  chat_with_document = {
    enabled                  = false
    guardrail_id_and_version = null
  }

  process_changes = {
    enabled = false
  }

  # When enabled, the example creates an OpenSearch Serverless + Bedrock Knowledge Base automatically.
  # Set chat_with_document.enabled = true together with this to enable document Q&A.
  knowledge_base = {
    enabled            = false
    knowledge_base_arn = null  # Auto-wired by the example when enabled
    model_id           = "us.amazon.nova-pro-v1:0"
    embedding_model_id = "amazon.titan-embed-text-v2:0"
  }
}

# Web UI Configuration
web_ui = {
  enabled               = true
  create_infrastructure = true
  logging_enabled       = false
  enable_signup         = ""  # Set to "true" to allow user self-registration
}

# BDA Processor Configuration
summarization_enabled  = true
summarization_model_id = "us.amazon.nova-pro-v1:0"

# Optional Features
enable_evaluation = false
enable_reporting  = false

# Tags
tags = {
  Environment = "development"
  Project     = "genai-idp"
  Owner       = "my-team"
}

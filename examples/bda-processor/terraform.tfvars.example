# Example configuration for BDA Processor with new API variable structure

# Basic configuration
region = "us-east-1"
prefix = "my-idp"

# Admin user (optional)
admin_email = "admin@example.com"

# API Configuration (New Consolidated Structure)
api = {
  enabled = true
  
  # Enable specific API features as needed
  agent_analytics = {
    enabled  = false  # Requires reporting to be enabled
    model_id = "us.anthropic.claude-3-5-sonnet-20241022-v2:0"
  }
  
  discovery = {
    enabled = true  # Enable document discovery workflow
  }
  
  chat_with_document = {
    enabled                  = true   # Enable chat with document feature
    guardrail_id_and_version = null   # Optional Bedrock Guardrail
  }
  
  process_changes = {
    enabled = false  # Enable document editing and reprocessing
  }
  
  knowledge_base = {
    enabled            = true  # Required for chat_with_document
    knowledge_base_arn = null  # Will be set automatically by the example
    model_id           = "us.amazon.nova-pro-v1:0"
    embedding_model_id = "amazon.titan-embed-text-v2:0"
  }
}

# Web UI Configuration
web_ui = {
  enabled               = true
  create_infrastructure = true
  logging_enabled       = false
  enable_signup         = ""  # Set to "true" to allow user self-registration
}

# BDA Processor Configuration
summarization_enabled = true
summarization_model_id = "us.amazon.nova-pro-v1:0"

# Optional Features
enable_evaluation = false
enable_reporting  = false

# Tags
tags = {
  Environment = "development"
  Project     = "genai-idp"
  Owner       = "my-team"
}